<databaseChangeLog>
    <changeSet id="1" author="developer">
        <createSchema schemaName="finances"/>
        <createTable schemaName="finances" tableName="users">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)" />
            <column name="email" type="VARCHAR(255)" unique="true"/>
            <column name="password" type="VARCHAR(255)" />
        </createTable>

        <createTable schemaName="finances" tableName="transactions">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_user_transaction" references="finances.users(id)"/>
            </column>
            <column name="amount" type="DECIMAL(10,2)" />
            <column name="category" type="VARCHAR(100)" />
            <column name="date" type="DATE"/>
            <column name="description" type="TEXT"/>
            <column name="type" type="VARCHAR(10)" />
        </createTable>
    </changeSet>
</databaseChangeLog>